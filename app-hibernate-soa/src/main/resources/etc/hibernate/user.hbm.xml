<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- 用户相关 -->
<hibernate-mapping package="edu.hnust.application.orm.user">
	<!-- 用户表 -->
	<class name="User" table="t_user" dynamic-update="true" dynamic-insert="true">
		<id column="id" name="id">
			<generator class="native" />
		</id>
		<property name="userName" column="user_name" />
		<property name="password" column="pass_word" />
		<property name="loginName" column="login_name" />
		<property name="fixedTelephone" column="fixed_telephone" />
		<property name="mobilePhone" column="mobile_phone" />
		<property name="qq" column="qq" />
		<property name="email" column="email" />
		<property name="createDate" column="create_date" />
		<property name="updateDate" column="update_date" />
		<property name="sysRemark" column="sys_remark" />
		<property name="language" column="language" />
		<property name="isSuperUser" column="is_superuser" />
	</class>
</hibernate-mapping>